# ===========================================
# MULTIMODALITY LABELING SYSTEM - BACKEND
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Your Supabase project URL (found in project settings)
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (safe for client-side use)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (server-side only, has elevated permissions)
SUPABASE_SERVICE_KEY=your-service-role-key-here

# JWT secret for token verification (found in Supabase API settings)
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ===========================================
# API CONFIGURATION
# ===========================================
# API version prefix (usually /api/v1)
API_V1_STR=/api/v1

# CORS allowed origins (comma-separated list)
# Add your frontend URLs here
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
# Maximum file size for uploads (in bytes)
# 104857600 = 100MB
MAX_FILE_SIZE=104857600

# Directory for file uploads (relative to backend root)
UPLOAD_DIR=uploads

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
# Environment mode: development, production, staging
ENVIRONMENT=development

# Root directory for task data storage
# Update this path to match your project structure
ROOT_DIR=/path/to/your/project/backend/taskData

# ===========================================
# OPTIONAL SETTINGS
# ===========================================
# Add any additional environment variables your project needs below
# For example:
# DATABASE_POOL_SIZE=10
# LOG_LEVEL=info
# REDIS_URL=redis://localhost:6379